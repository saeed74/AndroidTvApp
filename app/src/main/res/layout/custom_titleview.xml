<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/search_orb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:transitionGroup="true"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/search_background"
        android:layout_marginTop="2dp"
        android:layout_marginStart="48dp"/>

    <AnalogClock
        android:id="@+id/clock"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="24dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:src="@drawable/cinema_image"
        android:layout_toStartOf="@id/clock"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@id/img"
        android:paddingTop="15dp"
        android:src="@drawable/ic_baseline_ondemand_video_24"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@id/icon"
        android:fontFamily="@font/yekan_bold"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:visibility="visible" />



</merge>
