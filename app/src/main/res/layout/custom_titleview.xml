<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.leanback.widget.SearchOrbView
        android:id="@+id/search_orb"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:transitionGroup="true"
        android:layout_gravity="center|start"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/search_background" />

    <AnalogClock
        android:id="@+id/clock"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center|end"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginEnd="14dp"
        android:src="@drawable/cinema_image"
        android:layout_toStartOf="@id/clock"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginEnd="14dp"
        android:layout_toStartOf="@id/img"
        android:src="@drawable/ic_outline_verified_user_24"
        android:visibility="visible" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_toStartOf="@id/icon"
        android:fontFamily="@font/yekan_black"
        android:textSize="26sp"
        android:textColor="@color/white"
        android:visibility="visible" />



</merge>
