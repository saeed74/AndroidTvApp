<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">

    <FrameLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:background="@drawable/search_background"
            android:focusable="true"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="12dp"
            android:focusableInTouchMode="true"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_search_24" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="45dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="12dp"
            android:focusable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="18dp"
                android:layout_toStartOf="@id/icon"
                android:fontFamily="@font/yekan_black"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="14dp"
                android:layout_toStartOf="@id/img"
                android:src="@drawable/ic_outline_verified_user_24"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="14dp"
                android:layout_toStartOf="@id/clock"
                android:src="@drawable/cinema_image"
                android:visibility="visible" />

            <AnalogClock
                android:id="@+id/clock"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center|end" />

        </LinearLayout>

    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleView">

        <LinearLayout
            android:id="@+id/rows_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="80dp" />

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>